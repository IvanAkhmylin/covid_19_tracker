<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@android:color/transparent</item>
        <item name="drawerArrowStyle">@style/DrawerStyle</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Widget.Custom.NavigationView" parent="Widget.Design.NavigationView">
        <item name="itemIconTint">@drawable/nav_icon_color</item>
        <item name="itemTextColor">@drawable/nav_text_color</item>
    </style>

    <style name="MenuItemShape" parent="">
        <item name="android:shape">rectangle</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">50%</item>
        <item name="cornerSizeBottomRight">50%</item>
    </style>

    <style name="toolbarStyle">
        <item name="android:background">@color/colorPrimary</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="DrawerStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
        <item name="spinBars">true</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/TitleCardTextSize</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="PrimaryTextStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/BodyPrimaryTextSize</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="SecondaryTextStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/BodySecondaryTextSize</item>
    </style>
</resources>
